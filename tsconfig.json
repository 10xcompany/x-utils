{
  "compilerOptions": {
    "module": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
